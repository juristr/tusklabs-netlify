{
  "name": "product-store",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/product-store/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/product-store"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "product-store:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "product-store:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "product-store:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "product-store:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "product-store:build:development"
        },
        "production": {
          "buildTarget": "product-store:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/product-store"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/product-store/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "product-store:build"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "outputs": [],
      "dependsOn": ["build"],
      "options": {
        "command": "netlify deploy --filter product-store --dir dist/apps/product-store"
      }
    }
  },
  "tags": []
}
